@model IEnumerable<SGE.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Materias</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Materia @* @Html.DisplayNameFor(model => model.Nombre) *@
            </th>
            <th>
                Profesor@* @Html.DisplayNameFor(model => model.Profesor) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.Nombre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MateriaId" class="btn btn-primary">Modificar</a> |
                    <a asp-action="Details" asp-route-id="@item.MateriaId" class="btn btn-info">Ver</a> |
                    <a asp-action="Delete" asp-route-id="@item.MateriaId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model SGE.Models.Materia

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de eliminar el registro?</h3>
<div>
    <h4>Materia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Matería@*  @Html.DisplayNameFor(model => model.Nombre) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
           Profesor@*  @Html.DisplayNameFor(model => model.Profesor) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MateriaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">Regresar</a>
    </form>
</div>
